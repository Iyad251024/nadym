{
  "realm": "nadym",
  "enabled": true,
  "id": "nadym",
  "displayName": "NadyM Medical Platform",
  "displayNameHtml": "<div class=\"kc-logo-text\"><span>NadyM Medical Platform</span></div>",
  "defaultSignatureAlgorithm": "RS256",
  "revokeRefreshToken": false,
  "accessTokenLifespan": 300,
  "ssoSessionIdleTimeout": 1800,
  "ssoSessionMaxLifespan": 36000,
  "offlineSessionIdleTimeout": 2592000,
  "registrationAllowed": false,
  "rememberMe": true,
  "verifyEmail": true,
  "loginWithEmailAllowed": true,
  "resetPasswordAllowed": true,
  "bruteForceProtected": true,
  "roles": {
    "realm": [
      { "name": "DOCTOR", "description": "Medical Doctor Role" },
      { "name": "NURSE", "description": "Nurse Role" },
      { "name": "PATIENT", "description": "Patient Role" },
      { "name": "ADMIN", "description": "System Administrator Role" }
    ]
  },
  "clients": [
    {
      "clientId": "nadym-frontend",
      "enabled": true,
      "protocol": "openid-connect",
      "publicClient": true,
      "redirectUris": ["http://localhost:4200/*", "http://frontend/*"],
      "webOrigins": ["http://localhost:4200", "http://frontend"],
      "defaultClientScopes": ["web-origins", "acr", "profile", "roles", "email"],
      "optionalClientScopes": ["address", "phone", "offline_access", "microprofile-jwt"]
    },
    {
      "clientId": "nadym-backend",
      "enabled": true,
      "protocol": "openid-connect",
      "publicClient": false,
      "secret": "nadym-backend-secret",
      "serviceAccountsEnabled": true,
      "defaultClientScopes": ["web-origins", "acr", "profile", "roles", "email"],
      "optionalClientScopes": ["address", "phone", "offline_access", "microprofile-jwt"]
    }
  ],
  "clientScopes": [
    { "name": "roles", "protocol": "openid-connect" },
    { "name": "profile", "protocol": "openid-connect" },
    { "name": "email", "protocol": "openid-connect" },
    { "name": "web-origins", "protocol": "openid-connect" },
    { "name": "acr", "protocol": "openid-connect" },
    { "name": "offline_access", "protocol": "openid-connect" },
    { "name": "address", "protocol": "openid-connect" },
    { "name": "phone", "protocol": "openid-connect" },
    { "name": "microprofile-jwt", "protocol": "openid-connect" }
  ],
  "users": [
    {
      "username": "doctor@nadym.com",
      "enabled": true,
      "email": "doctor@nadym.com",
      "emailVerified": true,
      "firstName": "Dr. Jean",
      "lastName": "Dupont",
      "credentials": [{ "type": "password", "value": "doctor123", "temporary": false }],
      "realmRoles": ["DOCTOR"]
    },
    {
      "username": "nurse@nadym.com",
      "enabled": true,
      "email": "nurse@nadym.com",
      "emailVerified": true,
      "firstName": "Marie",
      "lastName": "Martin",
      "credentials": [{ "type": "password", "value": "nurse123", "temporary": false }],
      "realmRoles": ["NURSE"]
    },
    {
      "username": "patient@nadym.com",
      "enabled": true,
      "email": "patient@nadym.com",
      "emailVerified": true,
      "firstName": "Pierre",
      "lastName": "Durand",
      "credentials": [{ "type": "password", "value": "patient123", "temporary": false }],
      "realmRoles": ["PATIENT"]
    },
    {
      "username": "admin@nadym.com",
      "enabled": true,
      "email": "admin@nadym.com",
      "emailVerified": true,
